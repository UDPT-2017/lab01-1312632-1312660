<body>
<div class="container">
    <!-- Header -->
    <div class="row" id="header">
        <!-- Logo -->
        <div class="col-xs-12 col-sm-4 col-md-4">
            <img src="image/logo.png" class="img-responsive" />
        </div>
        <div class="col-xs-12  col-sm-8 col-md-8 text-right btn-group" id="login">
            <!-- Login -->
            <form class="form-inline">
                <div class="form-group">
                    <a class="btnLogout form-group" href="#"> Sign up</a>
                </div>
                <div class="form-group">
                    <a class="btnLogin form-group" href="#"> Sign in</a>
                </div>
                <div class="form-group">
                    <a class="btnLogin-fb form-group" href="#"> Log in with facebook</a>
                </div>
            </form>
        </div>
    </div>
    <!-- Navigation -->
    <div  class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <!-- Bổ sung thêm nút khi tạo menu responsive  -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
