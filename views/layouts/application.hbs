                    </button>
                    <a href="/" class="navbar-brand">Manage Albums</a>
                </div>
                <div class="navbar-collapse collapse" id="menu">
                    <ul class="nav navbar-nav">
                        <li><a href="/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                        <li><a href="/album"><span class="glyphicon glyphicon-picture"></span> Albums</a></li>
                        <li><a href="/about"><span class="glyphicon glyphicon-user"></span> About</a></li>
                        <li><a href="/blog"><span class="glyphicon glyphicon-globe"></span> Blog</a></li>
                    </ul>
                </div>
            </nav>  
        </div>
    </div>
    <div class="clearfix"></div>
    <!--Content-->
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-3 col-sm-2">
                <nav class="navbar navbar-default">
                    <div class="navbar-header">
                        <!-- Bổ sung thêm nút nhấn hiện left menu  -->
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu-left">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>     
                    <div class="navbar-collapse collapse" id="menu-left">
                        <ul class="nav navbar-nav">
                            <li><a href="/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                            <li><a href="/album"><span class="glyphicon glyphicon-picture"></span> Albums</a></li>
                            <li><a href="/about"><span class="glyphicon glyphicon-user"></span> About</a></li>
                            <li><a href="/blog"><span class="glyphicon glyphicon-globe"></span> Blog</a></li>
                        </ul>
                    </div>
                </nav>  
            </div>
            <div class="col-xs-9 col-sm-10 text-center">
                {{{body}}}
            </div>
        </div>
    </div>
    <div class="col-xs-12 text-center">
        <div class="row">
            <hr>
            <footer>
                <p>Design by Group T &amp T</p>
            </footer>
        </div>
